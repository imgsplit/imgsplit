{
  "name": "@imgsplit/core",
  "version": "0.0.2",
  "type": "module",
  "author": "h1ve2",
  "license": "MIT",
  "homepage": "https://imgsplit.github.io/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imgsplit/imgsplit.git"
  },
  "bugs": {
    "url": "https://github.com/imgsplit/imgsplit/issues"
  },
  "keywords": [
    "imagesplit",
    "imagesplitter"
  ],
  "description": "An image splitter",
  "scripts": {
    "build": "yarn run clean && rollup -c",
    "start": "yarn run clean && rollup -c --watch",
    "clean": "rimraf ./lib",
    "prepublishOnly": "yarn run build",
    "publish-ci": "yarn publish",
    "test": "rimraf ./test/.out && vitest run"
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.mjs",
      "require": "./lib/index.cjs"
    }
  },
  "files": [
    "lib/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.15.18",
    "cpy-cli": "^5.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.2",
    "rollup-plugin-dts": "^6.2.1",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "canvas": "^3.1.0"
  }
}
